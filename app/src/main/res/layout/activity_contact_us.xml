<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <!-- For Local Callers -->
        <TextView
            android:id="@+id/tvForLocalCallersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:text="For local callers only"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- CardView For Local Callers -->
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cvLocalCallers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvForLocalCallersLabel">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- RelativeLayout For Local Callers-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- 16221 -->
                    <TextView
                        android:id="@+id/tvFindLocalCallers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/tvFindLocalCallersCall"
                        android:text="16221"
                        android:textColor="@color/black" />

                    <!-- Call -->
                    <TextView
                        android:id="@+id/tvFindLocalCallersCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/capsule_shape"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawablePadding="4dp"
                        android:paddingStart="8dp"
                        android:paddingTop="4sp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4sp"
                        android:text="Call"
                        android:textColor="@color/white"
                        app:drawableLeftCompat="@drawable/ic_baseline_call_24"
                        app:drawableTint="@color/white" />

                </RelativeLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray" />

                <!-- RelativeLayout For Local Callers toll free-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- 16221 -->
                    <TextView
                        android:id="@+id/tvTollFreeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="08 0000 16221"
                        android:textColor="@color/black"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent" />

                    <!-- Call -->
                    <TextView
                        android:id="@+id/tvTollFree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/capsule_shape"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawablePadding="4dp"
                        android:paddingStart="8dp"
                        android:paddingTop="4sp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4sp"
                        android:text="Call"
                        android:textColor="@color/white"
                        app:drawableLeftCompat="@drawable/ic_baseline_call_24"
                        app:drawableTint="@color/white"
                        card_view:layout_constraintBottom_toBottomOf="@+id/tvTollFreeTitle"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintTop_toTopOf="@+id/tvTollFreeTitle" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <!-- For Local and Overseas Callers -->
        <TextView
